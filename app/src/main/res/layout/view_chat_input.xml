<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/Background"
    android:layout_height="wrap_content">

   <LinearLayout
       android:background="@drawable/rounded_input_drawable"
       android:layout_margin="@dimen/small_size"
       android:layout_width="0dp"
       android:orientation="horizontal"
       android:layout_weight="1"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/chat_input_emoticon"
           android:src="@drawable/action_emoji"
           android:layout_width="@dimen/chat_icon_size"
           android:layout_gravity="bottom"
           android:layout_height="@dimen/chat_icon_size"/>

       <EditText
           android:id="@+id/chat_input_field"
           android:layout_marginStart="@dimen/tiny_size"
           android:background="@color/Background"
           android:hint="@string/type_something"
           android:layout_weight="1"
           android:maxLines="4"
           android:fontFamily="@font/roboto"
           android:textColorHint="@color/textHintColor"
           android:textColor="@color/textPrimaryColor"
           android:textSize="@dimen/common_text_size"
           android:layout_width="0dp"
           android:layout_height="wrap_content"/>

       <ImageView
           android:id="@+id/chat_input_attach"
           android:src="@drawable/action_attach"
           android:layout_width="@dimen/chat_icon_size"
           android:layout_gravity="bottom"
           android:layout_marginStart="@dimen/tiny_size"
           android:layout_marginEnd="@dimen/tiny_size"
           android:layout_height="@dimen/chat_icon_size"/>

       <ImageView
           android:id="@+id/chat_input_camera"
           android:src="@drawable/action_camera"
           android:layout_width="@dimen/chat_icon_size"
           android:layout_gravity="bottom"
           android:layout_height="@dimen/chat_icon_size"/>
   </LinearLayout>
    
    <ImageView
        android:id="@+id/chat_input_send"
        android:background="@drawable/circle_drawable"
        android:src="@drawable/action_send"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/tiny_size"
        android:layout_height="wrap_content"/>

</LinearLayout>