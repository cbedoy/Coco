<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/view_media_content"
    android:background="@color/CurrentLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_media_content_thumbnail"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_size"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:lineSpacingMultiplier="@dimen/lineSpace"
        android:layout_marginLeft="@dimen/small_size"
        android:layout_marginRight="@dimen/small_size"
        android:textColor="@color/textPrimaryColor"
        android:id="@+id/view_media_content_title"
        android:fontFamily="@font/roboto_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size"
        tools:text="@string/lorem" />

    <TextView
        android:lineSpacingMultiplier="@dimen/lineSpace"
        android:layout_marginLeft="@dimen/small_size"
        android:layout_marginRight="@dimen/small_size"
        android:textColor="@color/textSecondaryColor"
        android:id="@+id/view_media_content_description"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        tools:text="@string/lorem" />

    <TextView
        android:lineSpacingMultiplier="@dimen/lineSpace"
        android:layout_marginLeft="@dimen/small_size"
        android:layout_marginRight="@dimen/small_size"
        android:layout_marginBottom="@dimen/small_size"
        android:textColor="@color/textHintColor"
        android:id="@+id/view_media_content_service"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/small_text_size"
        tools:text="@string/lorem" />
</LinearLayout>