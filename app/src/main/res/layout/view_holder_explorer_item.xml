<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    cardView:cardUseCompatPadding="true"
    cardView:cardBackgroundColor="@color/in_message_color"
    cardView:cardCornerRadius="8dp"
    android:layout_margin="@dimen/small_size"
    android:layout_width= "match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/explorer_item_avatar"
                    android:layout_margin="@dimen/small_size"
                    tools:srcCompat="@tools:sample/avatars"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <TextView
                    android:lineSpacingMultiplier="@dimen/lineSpace"
                    android:layout_marginEnd="@dimen/small_size"
                    android:layout_gravity="center"
                    android:textColor="@color/textPrimaryColor"
                    android:id="@+id/explorer_item_channel"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/common_text_size"
                    tools:text="Channel" />
            </LinearLayout>

            <TextView
                android:lineSpacingMultiplier="@dimen/lineSpace"
                android:ellipsize="marquee"
                android:layout_marginRight="@dimen/small_size"
                android:layout_marginLeft="@dimen/small_size"
                android:layout_marginBottom="@dimen/small_size"
                android:textColor="@color/textPrimaryColor"
                android:id="@+id/explorer_item_message"
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:autoLink="web"
                tools:text="https://open.spotify.com/track/5OK3iCr70LNEGXBqp6lRr7?si=8eCOk0-0QRKiifAeHOXBOA" />

        </LinearLayout>


        <ImageView
            android:id="@+id/explorer_item_thumbnail"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:lineSpacingMultiplier="@dimen/lineSpace"
                android:layout_marginTop="@dimen/small_size"
                android:layout_marginRight="@dimen/small_size"
                android:layout_marginLeft="@dimen/small_size"
                android:textColor="@color/textPrimaryColor"
                android:id="@+id/explorer_item_title"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_size"
                tools:text="@string/lorem" />

            <TextView
                android:lineSpacingMultiplier="@dimen/lineSpace"
                android:layout_marginRight="@dimen/small_size"
                android:layout_marginLeft="@dimen/small_size"
                android:layout_marginBottom="@dimen/small_size"
                android:textColor="@color/textSecondaryColor"
                android:id="@+id/explorer_item_description"
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                tools:text="@string/lorem" />


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>